{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "useUnknownInCatchVariables": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@exodus/circuit-breaker": [
        "packages/nestjs-circuit-breaker-module/src/index.ts"
      ],
      "@exodus/circuit-breaker/*": [
        "packages/nestjs-circuit-breaker-module/src/*"
      ],
      "@exodus/decorators": ["packages/nestjs-decorators-module/src/index.ts"],
      "@exodus/decorators/*": ["packages/nestjs-decorators-module/src/*"],
      "@exodus/filters": ["packages/nestjs-filters-module/src/index.ts"],
      "@exodus/filters/*": ["packages/nestjs-filters-module/src/*"],
      "@exodus/interceptors": [
        "packages/nestjs-interceptors-module/src/index.ts"
      ],
      "@exodus/interceptors/*": ["packages/nestjs-interceptors-module/src/*"],
      "@exodus/config": ["packages/nestjs-config-module/src/index.ts"],
      "@exodus/config/*": ["packages/nestjs-config-module/src/*"],
      "@exodus/repository": ["packages/repository/src/index.ts"],
      "@exodus/repository/*": ["packages/repository/src/*"],
      "@exodus/rate-limiter": [
        "packages/nestjs-rate-limiter-module/src/index.ts"
      ],
      "@exodus/rate-limiter/*": ["packages/nestjs-rate-limiter-module/src/*"],
      "@exodus/redis": ["packages/nestjs-redis-module/src/index.ts"],
      "@exodus/redis/*": ["packages/nestjs-redis-module/src/*"],
      "@exodus/shared": ["packages/shared/src/index.ts"],
      "@exodus/shared/*": ["packages/shared/src/*"],
      "@exodus/types": ["packages/types/src/index.ts"],
      "@exodus/types/*": ["packages/types/src/*"],
      "@exodus/utils": ["packages/utils/src/index.ts"],
      "@exodus/utils/*": ["packages/utils/src/*"],
      "@exodus/postgresql-repository": [
        "packages/postgresql-repository/src/index.ts"
      ],
      "@exodus/postgresql-repository/*": [
        "packages/postgresql-repository/src/*"
      ],
      "@exodus/postgres": ["packages/nestjs-postgres-module/src/index.ts"],
      "@exodus/postgres/*": ["packages/nestjs-postgres-module/src/*"],
      "@exodus/async-event-module": [
        "packages/async-event-module/src/index.ts"
      ],
      "@exodus/async-event-module/*": ["packages/async-event-module/src/*"],
      "@exodus/idempotency/*": ["packages/idempotency/src/*"],
      "@exodus/idempotency": ["packages/idempotency/src/index.ts"],
      "@exodus/object-id": ["packages/object-id/src/index.ts"],
      "@exodus/object-id/*": ["packages/object-id/src/*"],
      "@exodus/joser": ["packages/joser/src/index.ts"],
      "@exodus/joser/*": ["packages/joser/src/*"]
    }
  }
}
