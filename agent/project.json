{
  "name": "@exodus/agent",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "agent/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "commands": ["rollup -c rollup.config.mjs"],
        "parallel": false,
        "cwd": "agent"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/agent/src/main.js",
        "color": true
      },
      "configurations": {
        "development": {
          "command": "node --watch dist/agent/src/main.js"
        },
        "production": {
          "command": "node dist/agent/src/main.js"
        }
      }
    },
    "serve:app": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=app node dist/agent/src/main.js",
        "color": true
      }
    },
    "serve:asyncevent": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=asyncevent node dist/agent/src/main.js",
        "color": true
      }
    },
    "serve:async": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=async node dist/agent/src/main.js",
        "color": true
      }
    },
    "infra:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": ".",
        "color": true
      }
    },
    "infra:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose down",
        "cwd": ".",
        "color": true
      }
    },
    "docker:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up",
        "cwd": ".",
        "color": true
      }
    },
    "docker:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose down",
        "cwd": ".",
        "color": true
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "dev:app": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts --mode app\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "dev:projection": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts --mode projection --projections account\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "dev:async": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts --mode async\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "projection": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/agent/src/main.js --mode projection --projections account",
        "color": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["oxlint --fix --tsconfig=./tsconfig.json src/"],
        "cwd": "agent"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "agent/jest.config.cts",
        "passWithNoTests": true
      }
    },
    "build:docker:build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "commands": [
          "docker build -t exodus/agent:latest ./dist/agent"
        ],
        "cwd": ".",
        "parallel": false
      }
    },
    "build:docker:push": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build:docker:build"
      ],
      "options": {
        "commands": [
          "docker push exodus/agent:latest"
        ],
        "cwd": ".",
        "parallel": false
      }
    }
  }
}
